<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_250sdp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_32sdp"

        app:layout_constraintBottom_toTopOf="@id/text_slid"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.100000024"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/text_slid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/imageView1"
        android:textStyle="bold"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:fontFamily="@font/cairo_medium"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:text="تواصل مع المعلمين"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/imageView1"
        android:textColor="#242424"

        android:textSize="@dimen/_18ssp" />
    <TextView
        android:id="@+id/text_slid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:text="يوفر تطبيق رسل محادثات جماعية مع المعلمين والطلاب للنادي ,وايضا محادثات فردية "
        android:textAlignment="center"

        app:layout_constraintTop_toBottomOf="@id/text_slid"

        android:textSize="@dimen/_14ssp" />
</androidx.constraintlayout.widget.ConstraintLayout>