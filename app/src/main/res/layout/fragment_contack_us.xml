<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Frgmant.ContackUsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_32sdp"
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        />


    <EditText
        android:id="@+id/txt_inputEmail"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:hint="@string/example_gmail_ccom"

        android:layout_marginStart="@dimen/_16sdp"
        android:background="@color/input_background"
        android:layout_marginTop="@dimen/_12sdp"
        android:padding="@dimen/_8sdp"

        android:textAlignment="viewStart"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message :"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_32sdp"
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        />


    <EditText
        android:id="@+id/txt_inputMessage"

        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:hint="Type message.."
        android:background="@color/input_background"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="top"
        android:padding="@dimen/_12sdp"


        />


    <Button
        android:id="@+id/btn_sendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="Send"
        android:textSize="@dimen/_18ssp"

        />

       <LinearLayout
           android:id="@+id/layout_phone"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:gravity="center"




        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_phone_icon"

            />

        <TextView
            android:id="@+id/txt_whatsappNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0566020111"
            android:layout_marginStart="@dimen/_12sdp"


            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_whatsapp"

        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:gravity="center"




        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_whatapp_icon"

            />

        <TextView
            android:id="@+id/txt_phoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+972566020111"
            android:layout_marginStart="@dimen/_12sdp"


            />
    </LinearLayout>


</LinearLayout>