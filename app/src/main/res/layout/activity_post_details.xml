<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="12dp">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_margin="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_like"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_baseline_favorite_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_numberOfLike"
                    tools:text ="0"
                    android:textSize="@dimen/_12ssp"
                    />

            </LinearLayout>
            <TextView

                android:id="@+id/txt_post_club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(نادي الاعلام)"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_12ssp"
                />

            <TextView
                android:id="@+id/txt_post_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                tools:text="Hindddd"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagePostUserProfile"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                tools:src="@drawable/ic_launcher_background"


                />





        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:orientation="horizontal">

            <!--            <LinearLayout-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:gravity="center"-->
            <!--                android:layout_marginStart="@dimen/_12sdp"-->
            <!--                android:orientation="vertical">-->

            <!--                <ImageView-->
            <!--                    android:id="@+id/img_like"-->
            <!--                    android:layout_width="@dimen/_25sdp"-->
            <!--                    android:layout_height="@dimen/_20sdp"-->
            <!--                    android:src="@drawable/ic_heart" />-->

            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:id="@+id/txt_numberOfLike"-->
            <!--                    tools:text ="0"-->
            <!--                    android:textSize="@dimen/_12ssp"-->
            <!--                    />-->

            <!--            </LinearLayout>-->

            <TextView
                android:id="@+id/txt_PostDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_gravity="top"
                android:fontFamily="sans-serif-thin"
                android:layout_weight="2"
                tools:text="نص تعريف محتوى المنشور"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"

                />


        </LinearLayout>


        <ImageView
            android:id="@+id/img_postImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            app:layout_constraintTop_toBottomOf="@id/layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:scaleType="fitXY"

            />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentRc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_postImage"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="@dimen/_12sdp"
        tools:listitem="@layout/comment_item" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_8sdp"


        >
        <ImageView
            android:id="@+id/imag_send_comment"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_baseline_send_24"
            android:rotation="180"

            />

        <EditText
            android:id="@+id/input_comment"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:hint="اكتب تعليقا"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/comment_background"


            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>